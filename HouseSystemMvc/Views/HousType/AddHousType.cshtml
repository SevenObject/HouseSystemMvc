
@{
    ViewData["Title"] = "AddHousType";
}

<table class="table">
    <div class="layui-form-item" style="margin-bottom:50px;width: 90%">
        <label class="layui-form-label">户型：</label>
        <div class="layui-input-block">
            <input type="text" id="hx" required lay-verify="required" autocomplete="off" class="layui-input " placeholder="请输入户型；如：3室2厅2卫1厨" ;>
        </div>
    </div>
    <div class="layui-form-item" style="margin-bottom:50px;width: 90%">
        <label class="layui-form-label">户型面积：</label>
        <div class="layui-input-block">
            <input type="text" id="hxmj" required lay-verify="required" autocomplete="off" class="layui-input " placeholder="请输入户型面积；如：140㎡" ;>
        </div>
    </div>
    <div class="layui-form-item" style="margin-bottom:50px;width: 90%">
        <label class="layui-form-label">总价：</label>
        <div class="layui-input-block">
            <input type="text" id="zj" required lay-verify="required" autocomplete="off" class="layui-input " placeholder="请输入总价；如：448" ;>
        </div>
    </div>
    <div class="layui-form-item" style="margin-bottom:50px;width: 90%">
        <label class="layui-form-label">图像上传：</label>
        <div class="layui-input-block">
            <form method="post" enctype="multipart/form-data" id="form">
                <input type="file" name="file" id="file" multiple="multiple" />
            </form>
        </div>
    </div>
    <div class="layui-form-item" style="margin-bottom:50px;width: 90%">
        <label class="layui-form-label">朝向：</label>
        <div class="layui-input-block">
            <input type="text" id="cx" required lay-verify="required" autocomplete="off" class="layui-input " placeholder="请输入朝向；如：南" ;>
        </div>
    </div>
    <div class="layui-form-item" style="margin-bottom:50px;width: 90%">
        <label class="layui-form-label">楼盘：</label>
        <div class="layui-input-block">
            <select id="Select1" required lay-verify="required" autocomplete="off" class="layui-input " placeholder="请选择楼盘" ;>
                <option>请选择楼盘</option>
            </select>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn layui-btn-normal" lay-submit lay-filter="formDemo" type="button" onclick="addst()">保存</button>
            <button class="layui-btn layui-btn-normal" lay-submit lay-filter="formDemo" type="button" onclick="cong()">重置</button>
        </div>
    </div>
</table>
<script src="~/jquery-3.3.1.min.js"></script>

<script>
    $(document).ready(function () {
         
        $.ajax({
            url: "http://localhost:60345/api/HouseInfoContr/SeleHouInfo",
            type: "GET",
            dataType: "json",
            success:
                function (res) {
                    var op = "";
                    $(res).each(function () {
                        op += "<option value=" + this.htId + ">" + this.hName + "</option>";
                    })
                    $("#Select1").append(op);
                }
        })
    })
    
    function addst() {///保存
        var hx = $("#hx").val();
        if (hx == "") {
            alert("请输入户型！");
            return;
        }
        var hxmj = $("#hxmj").val();
        if (hxmj == "") {
            alert("请输入户型面积！");
            return;
        }
        var zj = $("#zj").val();
        if (zj=="") {
            alert("请输入总价！");
            return;
        }
        var pr = $("#form").val();
        if (pr == "") {
            alert("请选择图片！");
            return;
        }
        var cx = $("#cx").val();
        if (cx == "") {
            alert("请输入朝向！");
            return;
        }
        var lp = $("#Select1").val();
        if (lp == "") {
            alert("请选择楼盘！");
            return;
        }
        $.ajax({
            url: "",
            type: "",
            dataType: "",
            data: {},
            success:
                function (d) {

                }
        })
    }
</script>